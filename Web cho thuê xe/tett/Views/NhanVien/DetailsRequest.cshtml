@model tett.Models.YeuCau

@{
    ViewBag.Title = "DetailsRequest";
    Layout = "~/Views/Shared/_Layout_NhanVien.cshtml";
}

<h2>DetailsRequest</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
<br />
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaYC)
    <div style="margin-left:14%">
        <div class="form-group">
            Tên người gửi
            <div class="col-md-10">
                @Html.EditorFor(model => model.User.TenUser, new { htmlAttributes = new { @class = "form-control", @ReadOnly = "true" } })
                @Html.ValidationMessageFor(model => model.MaUser, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tên loại xe yêu cầu
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoaiXe, new { htmlAttributes = new { @class = "form-control", @ReadOnly = "true" } })
                @Html.ValidationMessageFor(model => model.TenLoaiXe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Só lượng ghế ngồi
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoCho, new { htmlAttributes = new { @class = "form-control", @ReadOnly = "true" } })
                @Html.ValidationMessageFor(model => model.SoCho, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Só lượng xe
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", @ReadOnly = "true" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Ghi chú
            <div class="col-md-10">
                @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control", @ReadOnly = "true" } })
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Đánh dấu xác nhận yêu cầu

            <div class="col-md-10">
                <div class="checkbox" id="action">
                    @Html.EditorFor(model => model.TinhTrang)
                    @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
        <br />
        <div class="form-group" style="text-align:right">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" style="color:#00a9cb"/>
                <button class="btn btn-default" style="color:black"> @Html.ActionLink("Quay lại", "RequestList")</button>
            </div>
        </div>
    
    </div>
}



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
