@model tett.Models.Xe
@{
    ViewBag.Title = "CarDetails";
    Layout = "~/Views/Shared/_Layout_KH.cshtml";
}

<!-- Single Product -->

<div class="single_product">
    <div class="container">
        <div class="row">

            <!-- Images -->
            <div class="col-lg-2 order-lg-1 order-2">
                <ul class="image_list">
                    <li data-image="../../Assets/images/single_4.jpg"><img src="../../Assets/images/single_4.jpg" alt=""></li>
                    <li data-image="../../Assets/images/single_2.jpg"><img src="../../Assets/images/single_2.jpg" alt=""></li>
                    <li data-image="../../Assets/images/single_3.jpg"><img src="../../Assets/images/single_3.jpg" alt=""></li>
                </ul>
            </div>

            <!-- Selected Image -->
            <div class="col-lg-5 order-lg-2 order-1">
                <div class="image_selected">
                    <img width="450px" ; height="auto" src="@Url.Content(Model.HinhAnh)" />
                </div>
            </div>

            <!-- Description -->
            <div class="col-lg-5 order-3">
                <div class="product_description">

                    <div class="product_name">@Html.DisplayFor(@model => model.TenXe)</div>
                    <div class="rating_r rating_r_4 product_rating"><i></i><i></i><i></i><i></i><i></i></div>
                    <div class="product_text"><p>@Html.DisplayFor(@model => model.MoTa)</p></div>
                    <div class="product_category">Biển số: @Html.DisplayFor(@model => model.BienSo)</div>
                    <div class="order_info d-flex flex-row">
                        <form action="#">
                            <div class="clearfix" style="z-index: 1000;">



                            </div>

                            <div class="product_price">@Html.DisplayFor(model => model.GiaXe)đ / ngày</div>
                            <br/>

                            @*<div class="form-group">
                                @Html.LabelFor(model => model.NgayNhan, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.NgayNhan, DateTime.Now.ToString(), new { htmlAttributes = new { @class = "form-control" }, @type = "date" })
                                    @Html.ValidationMessageFor(model => model.NgayNhan, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.NgayTra, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.NgayTra, DateTime.Now.ToString(), new { htmlAttributes = new { @class = "form-control" }, @type = "date" })
                                    @Html.ValidationMessageFor(model => model.NgayTra, "", new { @class = "text-danger" })
                                </div>
                            </div>*@

                            <div  class="button_container">
                                @if (Model.TinhTrang == true)
                                {
                                    <p style="color: red; font-weight:bold;">Xe đã được cho thuê. Nếu bạn có nhu cầu hãy quay lại vào ngày: </p>
                                    <p style="color: red; font-weight:bold;">@{
                                        var b= @Model.XeVaos.Where(s => s.MaXe == Model.MaXe).FirstOrDefault();
                                        var ngay=b.NgayVao.ToString();
                                        }
                                        @ngay
                                    </p>
                                    <button style="background-color:red" class="button cart_button"><a href="#">Đã cho thuê</a></button>
                                }
                                else
                                {
                                    <button class="button cart_button"><a href="@Url.Action("CreateHopDong", "HopDongs", new { maXe = Model.MaXe, tenXe=Model.TenXe })">Thuê xe</a></button>
                                }

                                <div class="product_fav"><i class="fas fa-heart"></i></div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

